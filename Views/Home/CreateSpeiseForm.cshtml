@{
}
@model Speise

<form asp-controller="Home" asp-action="CreateSpeise">
    <div class="card">
        <div class="card-header">
            <h5>Speise hinzufügen</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="Titel" type="text" placeholder="Titel" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <textarea class="form-control" asp-for="Notizen" type="text" placeholder="Ausführliche Beschreibung"></textarea>
                </div>
                <div class="col">
                    <select asp-for="Sterne" form-control" asp-items="@((IEnumerable<SelectListItem>)ViewData["Kategorien"])"></select>
                </div>
            </div>
           
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>
</form>
